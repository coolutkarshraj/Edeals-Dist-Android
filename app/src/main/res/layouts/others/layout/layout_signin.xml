<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSigIn"
    android:visibility="visible"
    tools:context=".activities.PreEnterActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivOpenIpModal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:text="user@edeals.com"
                    android:paddingLeft="8sp"
                    android:inputType="textEmailAddress"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/password_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:text="1234"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:paddingLeft="8sp"/>


            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5sp"
                android:text="Forget Password?"/>

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_corner"
                android:text="SIGN IN"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="25sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT YET REGISTERED?"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:layout_marginTop="15sp"/>

            <TextView
                android:layout_width="35sp"
                android:layout_height="2sp"
                android:background="@color/colorWhiteLight"
                android:layout_marginTop="4sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnSignUpNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_corner"
                android:text="SIGN UP"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="25sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/social_rounded_corner"
                android:text="Sign in with facebook"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="15sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sign in with google"
                android:background="@drawable/google_rounded_corner"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>