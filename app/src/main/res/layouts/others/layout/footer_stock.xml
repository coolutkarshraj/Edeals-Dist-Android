<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    app:cardElevation="15dp"
    android:id="@+id/cViewFooter"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="3dp">

        <LinearLayout
            style="@style/FooterItemBox">

            <TextView
                android:id="@+id/tvGroupByIcon"
                style="@style/FooterIcon"
                android:textSize="26dp"
                android:text="@string/icon_group_by" />

            <TextView
                android:id="@+id/tvGroupByText"
                style="@style/FooterText"
                android:layout_marginTop="3dp"
                android:text="group" />

        </LinearLayout>

        <LinearLayout style="@style/FooterItemBox">

            <TextView
                android:id="@+id/tvViewAsIcon"
                style="@style/FooterIcon"
                android:text="@string/icon_view_as" />

            <TextView
                android:id="@+id/tvViewAsText"
                style="@style/FooterText"
                android:text="view" />

        </LinearLayout>

        <LinearLayout style="@style/FooterItemBox">

            <TextView
                android:id="@+id/tvFilterIcon"
                style="@style/FooterIcon"
                android:text="@string/icon_filter" />

            <TextView
                android:id="@+id/tvFilterText"
                style="@style/FooterText"
                android:text="filter" />

        </LinearLayout>

        <LinearLayout style="@style/FooterItemBox">

            <TextView
                android:id="@+id/tvMoreIcon"
                style="@style/FooterIcon"
                android:text="@string/icon_more" />

            <TextView
                android:id="@+id/tvMoreText"
                style="@style/FooterText"
                android:text="more" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>